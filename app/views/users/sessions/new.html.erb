<div class="span4 centerOnPage">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :placeholder => 'Email address'  %></div>

  <div><%= f.password_field :password, :placeholder => 'Password' %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember"><%= f.check_box :remember_me, :class => 'float-left' %> &nbsp; Remember me</div>
  <% end -%>

  <div><button class="btn btn-success" type="submit">Sign in</button></div>
<% end %>
</div>
