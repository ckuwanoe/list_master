<div class="row-fluid">
  <%= form_for(@list_status,:html => { :class => "form_validation_ttip", :validate => true}) do |f| %>
  <div class="span8">
    <table class="table table-striped table-bordered dTableR" id="dt_a">
      <thead>
        <tr>
          <td>Update</td>
          <td>List Name</td>
          <td>VAN List ID</td>
          <td>County</td>
          <td>Precinct Number</td>
          <td>Current Status</td>
          <td>Last Status</td>
        </tr>
      </thead>
      <tbody>
        <% @lists.each do |list| %>
        <tr>
          <td><input type="checkbox" name="list_ids[]" value="<%= list.id %>"></td>
          <td><%= list.list_name %></td>
          <td><%= list.van_list_id %></td>
          <td><%= list.precinct.county %></td>
          <td><%= list.precinct.precinct_number %></td>
          <td><%= list.current_status %></td>
          <td><%= list.latest_status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="span3 form-sidebar">
    <ul>
      <li>Checkout date</li>
      <li><%= f.text_field :date %></li>
      <li></li>
      <li>Organization</li>
      <li><select></select></li>
      <li></li>
      <li><%= f.submit :submit, :class => 'btn btn-success' %></li>
    </ul>
  </div>
</div>
<% end %>
<% content_for :scripts do %>
  <script type="text/javascript">
    <%= render partial: 'datatables_js' %>
  </script>
<% end %>
